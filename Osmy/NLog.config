<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
	<targets>
		<target xsi:type="File" name="logfile" fileName="${specialfolder:folder=LocalApplicationData:cached=true}/Osmy/logs/${date:format=yyyyMMdd}.log"
            layout="${longdate}|${level}|${callsite}|${message} |${all-event-properties} ${exception:format=tostring}" />
		<target xsi:type="Console" name="logconsole"
            layout="${longdate}|${level}|${callsite}|${message} |${all-event-properties} ${exception:format=tostring}" />
	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="logfile,logconsole" />
	</rules>
</nlog>