<UserControl x:Class="Osmy.Controls.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Osmy.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
  <DockPanel>
    <Button DockPanel.Dock="Right" VerticalAlignment="Stretch" Click="Button_Click">
      <iconPacks:PackIconMaterial Kind="DotsHorizontal"/>
    </Button>
    <TextBox Text="{Binding SelectedPath, RelativeSource={RelativeSource AncestorType=local:PathSelector}}"
             ToolTip="{Binding SelectedPath, RelativeSource={RelativeSource AncestorType=local:PathSelector}}"
             IsReadOnly="True" VerticalAlignment="Stretch" IsTabStop="False"/>
  </DockPanel>
</UserControl>
